{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": ["eslint:recommended"],

    "parserOptions": {
        "ecmaVersion": 8,
        "ecmaFeatures": {
            "arrowFunctions":true,
            "experimentalObjectRestSpread": true
        },
        "sourceType": "module"
    },
    "rules": {
        "no-console": 0,
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single",
            { 
                "allowTemplateLiterals": true
            }
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}

